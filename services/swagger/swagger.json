{
    "openapi": "3.0.0",
    "info": {
        "version": "0.0.1",
        "title": "People Service",
        "description": "Swagger spec for documenting the people service"
    },
    "servers": [
        {
            "url": "http://localhost"
        }
    ],
    "paths": {
        "/api/people/ping": {
            "get": {
                "summary": "Just a sanity check",
                "responses": {
                    "200": {
                        "description": "Will return 'pong!'"
                    }
                }
            }
        },
        "/api/people": {
            "get": {
                "summary": "Returns all users",
                "responses": {
                    "200": {
                        "description": "user object"
                    }
                }
            },
            "post": {
                "summary": "Adds a new user",
                "requestBody": {
                    "description": "User to add",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/person"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User added"
                    },
                    "400": {
                        "description": "Ivalid payload"
                    },
                    "401": {
                        "description": "You do not have permission to do that"
                    }
                }
            }
        },
        "/api/people/{id}": {
            "get": {
                "summary": "Returns a user based on a single user ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of user to fetch",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "user object"
                    },
                    "400": {
                        "description": "errors"
                    },
                    "404": {
                        "description": "Person not found"
                    }
                }
            },
            "put": {
                "summary": "Edit an existing user",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of user to edit",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "user object"
                    },
                    "400": {
                        "description": "error"
                    },
                    "404": {
                        "description": "Person not found"
                    }
                }
            },
            "delete": {
                "summary": "Remove an existing user",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of user to delete",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200" : {
                        "description": "success"
                    },
                    "404" : {
                        "description": "Person not found"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "summary": "Logs a user in",
                "requestBody": {
                    "description": "User to log in",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/person"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successfully logged in"
                    },
                    "400": {
                        "description": "Invalid payload"
                    },
                    "404": {
                        "description": "Password does not match"
                    }
                }
            }
        },
        "/auth/status": {
            "get": {
                "summary": "Returns the logged in user's status",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "user object"
                    },
                    "404": {
                        "description": "Person not found"
                    }
                }
            }
        },
        "/auth/logout": {
            "get": {
                "summary": "Logs a user out",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully logged out"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        },
        "schemas": {
            "person": {
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "userid": {
                "properties": {
                    "id": {
                        "type": "string"
                    }
                }
            }
        }
    }
}